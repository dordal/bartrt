<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bartrt.app" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>BART Departures</name>
    <description>
        BART Real Time Departures provides real time departure data at BART stations that you select.
    </description>
    <author email="david@ordal.com" href="http://www.ordal.com">
        David Ordal
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />

    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="target-device" value="handset" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#222222" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <splash src="www/res/screen/ios/screen-iphone-portrait.png" />
    <icon src="www/res/icon/ios/icon-60.png" />
    <platform name="ios">
        <splash height="480" src="www/res/screen/ios/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="www/res/screen/ios/screen-iphone-portrait@2x.png" width="640" />
        <splash height="1136" src="www/res/screen/ios/screen-iphone-portrait-568h@2x.png" width="640" />
        <splash height="1334" src="www/res/screen/ios/screen-iphone-portrait-667h@2x.png" width="750" />
        <splash height="2208" src="www/res/screen/ios/screen-iphone-portrait-736h@3x.png" width="1242" />
        <icon height="60" src="www/res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="www/res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="www/res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="40" src="www/res/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="www/res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="www/res/icon/ios/icon-57.png" width="57" />
        <icon height="114" src="www/res/icon/ios/icon-57@2x.png" width="114" />
        <icon height="29" src="www/res/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="www/res/icon/ios/icon-small@2x.png" width="58" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>    
</widget>
